{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"include": ["**/*.blade.php"],
		"ignore": [
			"node_modules",
			"vendor",
			"public",
			"storage",
			"**/*.{yaml,yml,toml,neon,xml,md,cache}",
			"tests/cypress/support/**"
		]
	}
}
